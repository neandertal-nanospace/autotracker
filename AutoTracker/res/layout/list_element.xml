<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/list_item_group_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2E2EAE"
        android:singleLine="true"
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/list_item_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:text="" />

        <ImageView
            android:id="@+id/list_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/list_item_check_box"
            android:contentDescription="ccc"
            android:src="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/list_item_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/list_item_value"
            android:layout_toRightOf="@+id/list_item_icon"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Someveryveryverylongheader"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/list_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/list_item_header"
            android:layout_below="@+id/list_item_header"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:singleLine="true"
            android:text="someveryverylongsmalltexttobedisplayed"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/list_item_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingRight="5dp"
            android:text="100 $"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

</LinearLayout>